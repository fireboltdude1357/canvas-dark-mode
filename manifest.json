{
  "manifest_version": 3,
  "name": "Canvas Dark Mode",
  "version": "1.0.0",
  "description": "Applies a dark theme to Canvas LMS",
  "permissions": ["storage"],
  "host_permissions": ["*://*.instructure.com/*"],
  "content_scripts": [
    {
      "matches": ["*://*.instructure.com/*"],
      "css": ["styles.css"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
